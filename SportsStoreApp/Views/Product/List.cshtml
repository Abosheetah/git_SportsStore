@model IEnumerable<Product>
<h3 class="p-2 bg-primary text-white text-center">Products</h3> 
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-1 font-weight-bold">Id</div>
        <div class="col font-weight-bold">Name</div>
        <div class="col font-weight-bold">Price</div>
        <div class="col font-weight-bold">Category</div>
        <div class="col font-weight-bold">Description</div>
        <div class="col font-weight-bold"></div>
    </div>    
        <form asp-action="AddProduct" method="POST">
            <div class="row p-2"> 
                <div class="col-1"></div>        
                <div class="col">
                    <input name="Name" class="form-control">
                </div>
                <div class="col">
                    <input name="Price" class="form-control">
                </div>
                <div class="col">
                    <select class="form-control">                      
                        @foreach (Category c in ViewBag.Categories){
                            <option value="@c.ID">@c.Name</option>                           
                        }
                    </select>
                </div>
                <div class="col">
                    <input name="Description" class="form-control">
                </div>
                <div class="col">
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </div>
        </form>            
</div>

@foreach (var p in Model) {
    <div class="row p-2 ">
        <div class="col-1">@p.ID</div>
        <div class="col">@p.Name</div>
        <div class="col">@p.Price</div>
        <div class="col">@p.Category</div>
        <div class="col">@p.Description</div>
        <div class="col">
            <a asp-action="UpdateProduct" asp-route-key="@p.ID" class="btn btn-outline-primary">Edit</a>
        </div>       
    </div>
}
